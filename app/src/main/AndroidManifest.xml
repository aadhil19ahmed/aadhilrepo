<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aadhilahmed.mapboxdeliveries1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_appicon2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_appicon3"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Base">
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.DeliveryBoyActivity" />
        <activity android:name=".Activity.ManagerActivity" />
        <activity android:name=".Activity.ChoroplethActivity" />
        <activity android:name=".Activity.RadiusFilteringActivity" />
        <activity android:name=".Activity.LocationsActivity" />
        <activity android:name=".Activity.OptimisedRouteActivity"></activity>
    </application>

</manifest>