<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aadhilahmed.mapboxdeliveries1.Activity.ChoroplethActivity">

    <android.support.v7.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:id="@+id/toolbar1"
        android:background="@color/colorPrimary"
        app:theme="@style/GeneralActivityTheme"
        app:popupTheme="@style/Theme.AppCompat" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraTargetLat="37.996162943943155"
            mapbox:mapbox_cameraTargetLng="-101.0299301147461"
            mapbox:mapbox_cameraTilt="20"
            mapbox:mapbox_styleUrl="mapbox://styles/aadhilahmed/cj9gmuueo197s2sl7nvdwpyvm"
            mapbox:mapbox_cameraZoom="2"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="160dp"
            android:layout_height="250dp"
            android:id="@+id/recyclerViewCheckbox"
            android:paddingEnd="5dp"
            android:paddingBottom="8dp"
            android:background="#ffffff"
            android:layout_gravity="bottom|end"
            android:paddingRight="5dp"/>


    </FrameLayout>


</LinearLayout>
