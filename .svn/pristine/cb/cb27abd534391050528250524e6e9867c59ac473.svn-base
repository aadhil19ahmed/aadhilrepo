<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:weightSum="10"
    android:background="@drawable/layout_border_2"
    android:layout_height="220dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="2.5"
        android:layout_height="0dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="start|center"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:text="@string/text_markerposition"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="15dp"
            android:text="@string/text_colon"
            android:padding="5dp"
            android:gravity="start|center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="125dp"
            android:padding="5dp"
            android:gravity="start|center"
            android:textColor="@color/color_light_yellow"
            android:id="@+id/centreDenoter"
            android:textSize="11sp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="1.5"
        android:layout_height="0dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="start|center"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:text="@string/text_radius"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="15dp"
            android:text="@string/text_colon"
            android:padding="5dp"
            android:gravity="start|center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="125dp"
            android:padding="5dp"
            android:gravity="start|center"
            android:textColor="@color/color_light_yellow"
            android:id="@+id/radiusDenoter"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="1.5"
        android:layout_height="0dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="start|center"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:text="@string/text_undelivered_stats"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="15dp"
            android:text="@string/text_colon"
            android:padding="5dp"
            android:gravity="start|center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="125dp"
            android:padding="5dp"
            android:gravity="start|center"
            android:textColor="@color/color_light_yellow"
            android:id="@+id/undeliveredDenoter"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="1.5"
        android:layout_height="0dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="start|center"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:text="@string/text_delivered_stats"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="15dp"
            android:text="@string/text_colon"
            android:padding="5dp"
            android:gravity="start|center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="125dp"
            android:padding="5dp"
            android:gravity="start|center"
            android:textColor="@color/color_light_yellow"
            android:id="@+id/deliveredDenoter"
            android:layout_height="match_parent" />

    </LinearLayout>


    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button_design"
        android:text="@string/text_dismiss"
        android:layout_weight="2.5"
        android:padding="10dp" />


</LinearLayout>