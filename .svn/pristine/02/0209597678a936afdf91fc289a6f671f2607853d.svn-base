<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp"
        cardview:cardCornerRadius="5dp"
        cardview:layout_constraintBottom_toBottomOf="parent"
        cardview:layout_constraintLeft_toLeftOf="parent"
        cardview:layout_constraintRight_toRightOf="parent"
        cardview:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Status:"
                android:textSize="16sp"
                cardview:layout_constraintLeft_toLeftOf="parent"
                cardview:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblStatusData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                cardview:layout_constraintBaseline_toBaselineOf="@+id/lblStatus"
                cardview:layout_constraintLeft_toRightOf="@+id/lblStatus" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                android:id="@+id/divider"
                cardview:layout_constraintBaseline_toBaselineOf="@+id/lblStatusData"
                cardview:layout_constraintLeft_toRightOf="@+id/lblStatusData"/>
            <TextView
                android:id="@+id/lblOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="Order ID:"
                android:textSize="16sp"
                cardview:layout_constraintBaseline_toBaselineOf="@+id/lblStatus"
                cardview:layout_constraintLeft_toRightOf="@+id/divider" />
            <TextView
                android:id="@+id/lblOrderIdStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                cardview:layout_constraintBaseline_toBaselineOf="@+id/lblOrderId"
                cardview:layout_constraintLeft_toRightOf="@+id/lblOrderId" />

            <TextView
                android:id="@+id/lblProductId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:text="Order ID:"
                android:textSize="16sp"
                cardview:layout_constraintTop_toBottomOf="@+id/lblStatus"
                cardview:layout_constraintLeft_toRightOf="parent" />

            <TextView
                android:id="@+id/lblProductIdData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                cardview:layout_constraintBaseline_toBaselineOf="@+id/lblProductId"
                cardview:layout_constraintLeft_toRightOf="@+id/lblProductId" />

            <TextView
                android:id="@+id/lblName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:text="Name:"
                android:textSize="16sp"
                cardview:layout_constraintTop_toBottomOf="@+id/lblProductId"
                cardview:layout_constraintLeft_toRightOf="parent" />

            <TextView
                android:id="@+id/lblNameData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                cardview:layout_constraintBaseline_toBaselineOf="@+id/lblName"
                cardview:layout_constraintLeft_toRightOf="@+id/lblName" />

            <TextView
                android:id="@+id/lblAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:text="Address:"
                android:textSize="16sp"
                cardview:layout_constraintTop_toBottomOf="@+id/lblName"
                cardview:layout_constraintLeft_toRightOf="parent" />

            <TextView
                android:id="@+id/lblAddressData"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                cardview:layout_constraintBaseline_toBaselineOf="@+id/lblAddress"
                cardview:layout_constraintBottom_toTopOf="parent"
                cardview:layout_constraintLeft_toRightOf="@+id/lblAddress" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>