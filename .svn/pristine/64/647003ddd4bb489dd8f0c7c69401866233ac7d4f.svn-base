<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="100dp"
    android:background="@drawable/photo_backgrnd_design"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgDeliveryPerson"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/photo_backgrnd_design"
        android:scaleType="fitCenter"
        android:src="@drawable/pic_dimaria" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="@string/name_display_text"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="@string/location_display_text"
            android:textColor="@color/colorBlack"
            android:textSize="9sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDeliveryPersonName"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:gravity="left|top"
            android:padding="2dp"
            android:textColor="@color/colorAccent"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtLocationDisplay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="left|top"
            android:padding="2dp"
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_calling" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_directions" />

    </LinearLayout>


</LinearLayout>